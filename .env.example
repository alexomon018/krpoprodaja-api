# Node Environment
NODE_ENV=development
APP_STAGE=dev

# Server Configuration
PORT=8080
HOST=localhost

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/krpoprodaja

# JWT & Authentication
# IMPORTANT: Must be at least 32 characters
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Token expiration times (format: 30s, 5m, 1h, 7d)
ACCESS_TOKEN_EXPIRES_IN=30m        # Short-lived access tokens for API authorization
ID_TOKEN_EXPIRES_IN=30m            # Short-lived ID tokens with user identity
REFRESH_TOKEN_EXPIRES_IN=30d       # Long-lived refresh tokens

# Optional: Separate secret for refresh tokens (recommended for production)
# If not set, will use JWT_SECRET
REFRESH_TOKEN_SECRET=your-refresh-token-secret-minimum-32-characters-long

# Security - Account Protection
BCRYPT_ROUNDS=12                          # Password hashing strength (10-20)
FAILED_LOGIN_ATTEMPTS_LIMIT=5             # Max failed login attempts before lockout (3-10)
ACCOUNT_LOCKOUT_DURATION=15m              # Account lockout duration (format: 5m, 1h, etc)
OAUTH_TOKEN_TRACKING_DURATION=10m         # How long to track used OAuth tokens to prevent replay attacks

# OAuth - Google
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# OAuth - Facebook
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email - Resend
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@yourdomain.com
FRONTEND_URL=http://localhost:3000
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=debug

# AWS S3 Configuration
# Get these from: https://console.aws.amazon.com/
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=krpoprodaja-images

# Image Upload Configuration
MAX_IMAGE_SIZE=5242880                    # Maximum file size in bytes (5MB default)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
MAX_IMAGES_PER_PRODUCT=10                 # Maximum number of images per product

# Cities API - Geonames
# Get your username from: https://www.geonames.org/login
# Free tier: 20,000 credits per day
GEONAMES_USERNAME=your-geonames-username
