# Test Environment Configuration
NODE_ENV=test
APP_STAGE=test

# Server Configuration
PORT=8080
HOST=localhost

# Database (using a test database)
DATABASE_URL=postgresql://testuser:testpass@localhost:5432/krpoprodaja_test

# JWT & Authentication
# Test secrets - DO NOT use these in production!
JWT_SECRET=test-jwt-secret-key-minimum-32-characters-long-for-testing
REFRESH_TOKEN_SECRET=test-refresh-token-secret-minimum-32-characters-long

# Token expiration times
ACCESS_TOKEN_EXPIRES_IN=30m
ID_TOKEN_EXPIRES_IN=30m
REFRESH_TOKEN_EXPIRES_IN=30d

# Security - Account Protection
BCRYPT_ROUNDS=10
FAILED_LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOCKOUT_DURATION=15m
OAUTH_TOKEN_TRACKING_DURATION=10m

# OAuth - Google (test values)
GOOGLE_CLIENT_ID=test-google-client-id

# OAuth - Facebook (test values)
FACEBOOK_APP_ID=test-facebook-app-id
FACEBOOK_APP_SECRET=test-facebook-app-secret

# Email - Resend (test values)
RESEND_API_KEY=re_test_api_key
EMAIL_FROM=test@example.com
FRONTEND_URL=http://localhost:3000
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=error
